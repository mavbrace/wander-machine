<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#333639"
    tools:context="com.example.mavis.place.MainActivity">

    <ImageView
        android:id="@+id/background_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/info_amp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMPLITUDE" />

    <TextView
        android:id="@+id/info_light"
        android:layout_below="@id/info_amp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMBIENT LIGHT" />

    <Button
        android:id="@+id/start_stop_button"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="#C0C9E8"
        android:text="START" />

    <RelativeLayout
            android:id="@+id/imgs"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_below="@id/start_stop_button">

        <ImageView
            android:id="@+id/circle_graphic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/gather_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gatheringplace0"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:maxWidth="600dp"
            android:maxHeight="600dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/visual"
            android:layout_height="600dp"
            android:layout_marginTop="6dp"
            android:layout_width="600dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/status_text"
        android:layout_below="@id/imgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATUS: WAITING"/>

    <Button
        android:id="@+id/more_info_button"
        android:layout_below = "@id/status_text"
        android:layout_width = "wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:background="#343741"
        android:textColor="#C0C9E8"
        android:text="PLACES" />



</RelativeLayout>
